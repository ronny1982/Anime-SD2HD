<UserControl
    x:Class="AnimeSD2HD.ProgressInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Visibility="{x:Bind Path=ViewModel.VisibleState, Mode=OneWay}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="4" FontSize="12" FontWeight="Bold" Foreground="{x:Bind Path=ViewModel.StatusColor, Mode=OneWay}" Text="{x:Bind Path=ViewModel.StatusText, Mode=OneWay}" />
        <TextBlock Grid.Row="0" Grid.Column="1" Margin="4" FontSize="12" Opacity="0.5" Text="{x:Bind Path=ViewModel.Time, Mode=OneWay}" />
        <ProgressBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="4" HorizontalAlignment="Stretch" Foreground="{x:Bind Path=ViewModel.StatusColor, Mode=OneWay}" Minimum="{x:Bind Path=ViewModel.Minimum, Mode=OneWay}" Maximum="{x:Bind Path=ViewModel.Maximum, Mode=OneWay}" Value="{x:Bind Path=ViewModel.Value, Mode=OneWay}" IsIndeterminate="{x:Bind Path=ViewModel.IsIndeterminate, Mode=OneWay}" />
    </Grid>
</UserControl>